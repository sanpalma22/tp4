<header>
<h1>Creador de Indumentarias</h1>
<a href='@Url.Action("SelectIndumentaria","Home")'>Elige la indumentaria</a>
</header>
@{
    int cont =0;
}
<form action='@Url.Action("GuardarIndumentaria","Home")'>
    <select name="Equipo">
        <option value="" selected>Selecciona una opci√≥n</option>
        @foreach (string item in ViewBag.ListaEquipos)
        {
            <option value="@cont">@item</option>
            cont++;
        }
    </select> 
<table>
    @{
        cont=1;
    }
    <tr>
        @foreach (string item in ViewBag.ListaCamisetas)
    {   
        <th>
            <div>
                <h3>@cont</h3>
                <img src="/imagenesCamiseta/@item"><img/>
            </div>
        </th>
        cont++;
    }
    <th><input type="number" min="0" max="10" name="Camiseta"></th>
    </tr> 
    @{
        cont=1;
    }
    <tr>
        @foreach (string item in ViewBag.ListaPantalones)
    {
        <th>
            <div>
                <h3>@cont</h3>
                <img src="/imagenesShorts/@item"><img/>
            </div>
        </th>
        cont++;
    }
    <th><input type="number" min="0" max="10" name="Shorts"></th>
    </tr>
    @{
       cont=1;
    }
    <tr>
        @foreach (string item in ViewBag.ListaMedias)
    {
        <th>
            <div>
                <h3>@cont</h3>
                <img src="/imagenesMedias/@item"><img/>
            </div>
        </th>   
        cont++;    
    }
    <th><input type="number" min="0" max="10" name="Medias"></th>
    </tr>    
</table>
